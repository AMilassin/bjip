{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "globals": {
    "__glassAppRestRoute__": true,
    "__glassAppGlobalRoute__": true,
    "__DEV__": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "class-methods-use-this": 0,
    "linebreak-style": "off",
    "max-len": [1, 120, { "ignoreTrailingComments": true, "ignoreUrls": true }],
    "no-unused-vars": 1,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 3,
        "maxEOF": 1
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/jsx-curly-spacing": [
      2,
      "always"
    ],
    "react/prefer-stateless-function": 1,
    "react/prop-types": 0,
    "react/sort-comp": 0,
    "self-closing-comp": 0,
  }
}
